# API Keys for Multi-Agent AI Research System

# OpenAI API Key (Required for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# NSE API Key (Optional - for real-time NSE data)
NSE_API_KEY=your_nse_api_key_here

# BSE API Key (Optional - for real-time BSE data)
BSE_API_KEY=your_bse_api_key_here

# Alpha Vantage API Key (Optional - for additional financial data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Finnhub API Key (Optional - for market data)
FINNHUB_API_KEY=your_finnhub_key_here

# Database Configuration (Optional - for data persistence)
DATABASE_URL=sqlite:///multibagger_data.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/system.log

# System Configuration
MAX_STOCKS_PER_ANALYSIS=50
ANALYSIS_TIMEOUT_MINUTES=30
CACHE_DURATION_HOURS=24

# Notification Settings (Optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Webhook URLs (Optional - for external integrations)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10